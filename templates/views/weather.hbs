<!doctype html>
<html lang="en">

<head>
    {{>header_links}}

    <link rel="stylesheet" href="css/weather.css">

    {{!-- Font awesome kit --}}
    <script src="https://kit.fontawesome.com/36535113cc.js" crossorigin="anonymous"></script>
</head>

<body>
    {{>header}}

    <div class="container mt-5">
        <div class="d-flex flex-column align-items-center">

            <form class="temp_form">
                <input type="text" id="city" placeholder="Enter city name.." autocomplete="off">
                <div id="search">
                    <input type="submit" id="submitBtn" value="search">
                </div>
            </form>

            <div class="tempInformation">
                <div class="top_layer">
                    <div class="day">Tuesday</div>
                    <div class="date">27 July</div>
                </div>
                <div class="main_layer">
                    <div id="city_name">Get Output here</div>
                    <div class="temp hide_data">
                        <div class="result">22<sup>&deg;</sup>C</div>
                        <div class="temp_logo"> <i class="fas fa-sun" style="color:yellow"></i></div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    {{>footer}}

    <script src="js/weather.js"></script>
</body>

</html>